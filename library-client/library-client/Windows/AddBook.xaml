<Window x:Class="library_client.Windows.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library_client.Windows"
        mc:Ignorable="d"
        Title="Добавление книги" Height="371" Width="339" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="TitleTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="30" Margin="96,10,0,0"/>
        <TextBox x:Name="YearTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="30" Margin="96,99,0,0"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="30" Margin="96,146,0,0"/>
        <Button x:Name="CreateBook" Content="Добавить книгу" HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" Width="262" Click="CreateBook_Click"/>
        <ComboBox x:Name="authorsComboBox" HorizontalAlignment="Left" Margin="96,45,0,0" VerticalAlignment="Top" Width="176" Height="49" SelectedValuePath="id" DisplayMemberPath="fio"/>
        <ComboBox x:Name="GenreComboBox" HorizontalAlignment="Left" Margin="96,181,0,0" VerticalAlignment="Top" Width="176" Height="68" SelectedValuePath="id" DisplayMemberPath="name"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top"/>
        <Label Content="Автор" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Год издания" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top"/>
        <Label Content="Жанр" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
