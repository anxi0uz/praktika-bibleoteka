<Window x:Class="library_client.Windows.WorkerBookRelease"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library_client.Windows"
        mc:Ignorable="d"
        Title="Выдача книг" Height="445" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <ComboBox x:Name="UserComboBox" HorizontalAlignment="Center" Margin="0,49,0,0" VerticalAlignment="Top" Width="330"  SelectedValuePath="id" DisplayMemberPath="fio"/>
        <ComboBox x:Name="BookComboBox" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" Width="330" SelectedValuePath="id" DisplayMemberPath="title"/>
        <Button x:Name="ReleaseBook" Content="Выдать книгу" HorizontalAlignment="Center" Margin="0,359,0,0" VerticalAlignment="Top" Width="330" Click="ReleaseBook_Click"/>
        <Label Content="Читатель" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Книга" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TicketNumber_" HorizontalAlignment="Center" Margin="0,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="330"/>
        <Label Content="Номер билета" HorizontalAlignment="Left" Margin="10,166,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
