<UserControl x:Class="library_client.Controls.UsersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:library_client.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border BorderThickness="3" BorderBrush="Black">
            <DockPanel>
                <StackPanel>
                    <Label Style="{StaticResource lbl}" Content="{Binding id}"/>
                    <Label Style="{StaticResource lbl}" Content="{Binding fio}"/>
                    <Label Style="{StaticResource lbl}" Content="{Binding birthDate}"/>
                    <Label Style="{StaticResource lbl}" Content="{Binding adress}"/>
                    <Label Style="{StaticResource lbl}" Content="{Binding phoneNumber}"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
